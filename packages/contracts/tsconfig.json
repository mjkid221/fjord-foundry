{
  "extends": "@fjord-foundry/tsconfig/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "./constants",
    "./helpers",
    "./scripts",
    "./tests",
    "./types",
    "./migrations"
  ],
  "files": [],
  "exclude": ["node_modules", "dist"],
  "typeRoots": ["./types/**", "@types", "../../node_modules/@types"]
}
